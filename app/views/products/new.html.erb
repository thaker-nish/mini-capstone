<h1>Create a new product!</h1>

<%= form_tag '/products', method: :post do%>
<div class="form-group">
  <%= label_tag :name, 'Enter name: '%>
  <%= text_field_tag :name,'', class:"form-control" %>
</div>
<div class="form-group">
  <%= label_tag :price, 'Enter price: ' %>
  <%= text_field_tag :price,'', class:"form-control" %>
</div>
<div class="form-group">
  <%= label_tag :image, 'Enter image: ' %>
  <%= text_field_tag :image,'', class:"form-control" %>
</div>
<div class="form-group">
  <%= label_tag :description, 'Enter description: ' %>
  <%= text_field_tag :description,'', class:"form-control"%>
</div>
<div>
  <%= submit_tag 'Submit product!', class:"btn btn-primary" %>
</div>
<%end%>